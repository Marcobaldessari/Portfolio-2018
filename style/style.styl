// @import url('https://fonts.googleapis.com/css?family=Josefin+Sans:400,600,700');
@import url('https://fonts.googleapis.com/css?family=Crimson+Text');

@import url("normalize.css")

$blue = #004DC6
$lighter-blue = #0053D9
$text-blue = #001F4F
$yellow = #F8E71C

$m-screen = 40em
$l-screen = 60em

*
  margin 0
  padding 0

html, body
    background-color white
    height 100%
    // overflow hidden
    

h1
h2
h3
h4
h5
h6
p
a
    // font-family 'Josefin Sans', sans-serif;
    font-family "Crimson Text", serif;

p
    font-size 22px;
    font-weight regular
    color black
    color $text-blue
    line-height 1.5em
    &::selection
        background-color #F3F3F3
        color $blue
        text-decoration underline

header 
    width 100%
    height 136px
    position absolute
    z-index 1

    .logo 
        width 12.5vw
        height 12.5vw
        display inline-block
        background-image URL("../img/img-logo@2x.png")
        background-size 12.5vw 12.5vw
        margin-top 24px
        grid-column 2

        @media(min-width $m-screen)
            width 84px
            height 84px 
            background-image URL("../img/img-logo@2x.png")
            background-size 84px 84px
.grid
    display grid
    grid-template-columns repeat(8, 1fr)
    grid-column-gap 0px
    width 100%


#background
    position absolute
    z-index 0
    height 100%

    .column 
        height 100%
        border-right 1px solid #F6F6F6

    .columnlast-child
        border none


#content

    #text-wrapper
        z-index 1
        grid-column 2 / span 6
        margin-top 6em
        @media (min-width $m-screen)
            margin-top 14em
        @media (min-width $m-screen)
            grid-column 2 / span 5

        @media (min-width $l-screen)
            grid-column 2 / span 4

        p
            margin-top 1.5em
            z-index 3
        a   
            color black
            position relative
            display inline-block
            z-index 3
            
            &::before
                content ""
                display block
                position absolute
                width 100%
                top 55%
                height 25%
                background-color $yellow
                z-index -1
                transition: all .1s ease-out

            &:hover:before
                top -10%
                height 110% 


#social-links
    grid-column 2 / span 6
    @media (min-width $m-screen)
        grid-column 2 / span 4
    @media (min-width $l-screen)
        grid-column 2 / span 3

    z-index 1
    margin-top 48px
    display grid
    grid-template-columns: repeat(8, 1fr)


    li
        display inline-block
        // margin-right 16px

    a
        display inline-block
        width 48px
        height 48px   
        background-size 48px 48px

        &:hover
            opacity .5

    #icn-dribbble
        background-image URL("../img/icn-dribbble@2x.png")
    #icn-codepen
        background-image URL("../img/icn-codepen@2x.png")
    #icn-medium
        background-image URL("../img/icn-medium@2x.png")
    #icn-github
        background-image URL("../img/icn-github@2x.png")
    #icn-twitter
        background-image URL("../img/icn-twitter@2x.png")
    #icn-instagram
        background-image URL("../img/icn-instagram@2x.png")

#cta-hi
    z-index 1
    display inline-block
    margin-top 24px
    padding 16px 0
    background $blue
    font-size 28px
    font-weight 600
    text-align center
    color white
    grid-column: 5/span 3;
    &:hover
        background $lighter-blue

    @media (min-width 40em)
        grid-column: 5/span 2;
    @media (min-width 60em)
        grid-column: 5/span 1;
        
    @media (max-width 40em)
        display none    

#canvas 
    position fixed
    top 0
    left 0
    z-index 0

.dg
    z-index 99 !important